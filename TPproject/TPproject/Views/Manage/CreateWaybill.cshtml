@model TPproject.Models.Waybill
@{
    ViewBag.Title = "CreateWaybill";
}

<h2>Оформление путевого листа</h2>

@using (Html.BeginForm())
{
    
    
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.User.LastName, "Фамилия водителя", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("User.LastName", new SelectList(ViewBag.user, "LastName","LastName"), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.User.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Bus.number_bus, "Номер автобуса", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Bus.number_bus", new SelectList(ViewBag.bus, "number_bus", "number_bus"), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Bus.number_bus, "", new { @class = "text-danger" })
        </div>
    </div>

    




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Создать" class="btn btn-default" />
        </div>
    </div>
</div>
}

